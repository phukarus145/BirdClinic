@page
@model BirdClinicSystems.Pages.BirdManagement.IndexModel
@{
}
<div class="site-section bg-light">
    <p>
    <a asp-page="Create">Create Bird</a>
</p>
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto text-center mb-5 section-heading">
                <h2 class="mt-3 mb-5">List Bird</h2>
            </div>
        </div>
        <div class="row">

            @foreach (var item in Model.BirdList)
            {

                <div class="col-md-6 col-lg-4   mb-5">
                    <div class="card" style="width:300px">
                        <img class="card-img-top" style="height:200px; width:300px" alt="Card image cap" src="data:image/png;base64,@item.Image">
                        <div class="card-body">
                            <h2 class=" mt-1 mb-1 text-center card-title">  @item.ID</h2>

                            <p class="card-text">Name: @item.Name</p>
                            <p class="card-text">Birthday: @item.Birthday</p>
                            <p class="card-text">Description: @item.Description</p>
                            <p class="card-text">User ID: @item.UserID</p>
                            <p class="card-text">Height: @item.Height</p>
                            <p class="card-text">Weight: @item.Weight</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>